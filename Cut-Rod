//Problema de Corte de Hastes (Dividir para Conquistar)

#include <iostream>
using namespace std;

int cutRod(int p[],int n)
{
    if(n<=0)
        return 0;

    int q = INT_MIN;

    for(int i=0; i<n; i++)
    {
        q=max(q,p[i]+cutRod(p,n-i-1));
    }
    return q;
}

int main()
{
    int n;
    cout<<"Digite o tamanho da haste: ";

    cin>>n;
    int arr[n];

    cout<<"Digite os valores: ";

    for(int i=0;i<n;i++){
        cin>>arr[i];
    }

    cout<<"O valor maximo: "<<cutRod(arr, n)<<'\n';
    return 0;
}
